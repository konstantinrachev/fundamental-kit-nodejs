<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="<%- (typeof meta != 'undefined') ? meta.description : '' %>">
        
        <title><%- (typeof meta != 'undefined') ? meta.title : 'Fundamental Studio Ltd.' %></title>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css">
        <script defer src="https://use.fontawesome.com/releases/v5.6.3/js/all.js"></script>
    </head>
    <body>

        <nav class="navbar" role="navigation" aria-label="main navigation" id="navigation">
            <div class="navbar-brand">
                <a class="navbar-item" href="#">
                    <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
                </a>

                <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasicExample" class="navbar-menu" v-if="typeof nodes != 'undefined'">
                <div class="navbar-start">
                    <div v-for="(item, i) in nodes">
                        <a :href="item.href" :class="'navbar-item ' + item.classes" v-if="!item.children.length" v-text="item.title"></a>

                        <div class="navbar-item has-dropdown is-hoverable" v-else>
                            <a :class="'navbar-link ' + item.classes" v-text="item.title"></a>

                            <div class="navbar-dropdown">
                                <a :href="child.href" class="navbar-item" v-for="(child, j) in item.children" v-text="child.title"></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="buttons">
                        <a class="button is-primary">
                            <strong>Sign up</strong>
                        </a>
                        <a class="button is-light">
                            Log in
                        </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>